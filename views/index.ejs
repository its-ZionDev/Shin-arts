<%- include('partials/header')%>
<main>
  <!--Hero Section Begins-->
  <section class="hero" id="hero">
    <div class="grid-box hero-container container">
      <div class="hero-heading-container">
        <div class="hero-heading">
          <span class="hero-greeting">Hello</span>
          <h1>I'm <span class="hero-name">Shal Thunglano</span></h1>
        </div>
      </div>
      <div class="hero-profile">
        <div class="hero-img-container">
          <img src="/assets/images/Shin_Arts_Hero_Profile.png" alt="Shin's Profile Image" class="hero-img" />
        </div>
      </div>
      <div class="hero-info">
        <p class="hero-description">
          <span class="hero-title">A Multi Medium Artist.</span> 
          I try my best with every medium in the art field, it's a quality work at friendly prices.
        </p>
        <p class="hero-quote">
          Commit your works to the Lord and He will establish your plans. - Proverbs 16:3
        </p>
        <a href="#art-showcase" class="hero-scroll">
          <div class="hero-scroll-container">
            <i class="ri-arrow-down-s-line"></i>
          </div>
          <span class="hero-scroll-text">Scroll Down</span>
        </a>
      </div>
    </div>
  </section>
  <!--Hero Section Ends-->

  <div class="gallery-header glass-bg">
    <h1 class="main-head">Showcase</h1>
  </div>

  <!--Gallery Section Begins-->
  <section class="art-showcase" id="art-showcase">
    <div class="container">
      <div class="art-card-container art-container">
